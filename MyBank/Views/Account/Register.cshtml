@model RegistrationViewModel
@{
	ViewData["Title"] = "Regisztráció";
}


<div style="width: 100%;">
	<div class="row top-row pt-5">
		<div class="col-md-7 mx-auto">
			<h2 style="text-align: center;">Regisztráció</h2>
			<form asp-controller="Account" asp-action="Register">

				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="UserName"></label>
					<input asp-for="UserName" class="form-control" />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>

				<div class="form-group pt-4">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="form-group pt-4">
					<label asp-for="AccountNumber"></label>
					<input asp-for="AccountNumber" class="form-control" />
					<span asp-validation-for="AccountNumber" class="text-danger"></span>
				</div>

				<div class="form-group pt-4">
					<label asp-for="Password"></label>
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="form-group pt-4">
					<label asp-for="PinCode"></label>
					<input asp-for="PinCode" class="form-control" />
					<span asp-validation-for="PinCode" class="text-danger"></span>
				</div>

				<button class="btn btn-primary mt-3 float-end" type="submit">Regisztrálás</button>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
